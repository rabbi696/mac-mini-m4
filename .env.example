# CyberPanel Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration for CyberPanel
DB_SERVER=localhost
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password
DB_NAME=your_database_name
DB_PORT=3306

# CyberPanel specific settings
# Usually CyberPanel creates databases with format: username_dbname
# Example: if your username is "mysite" and you want database "app"
# DB_NAME would be "mysite_app"
# DB_USERNAME would be "mysite_app" (CyberPanel creates matching user)

# Production settings
PHP_DISPLAY_ERRORS=Off
PHP_LOG_ERRORS=On
